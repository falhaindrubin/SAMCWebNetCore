@model IEnumerable<SAMCWebNetCore.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

@* Html.BeginForm is used to add a form in an Html document *@
@* Pass the action name in the first parameter, controller name in the second parameter and specify the form request type as get *@

<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        //The following are the search fields/options
        <table>
            <tr>
                <td>
                    <b> Search Option: </b>
                </td>
                <td>
                    @Html.RadioButton("option", "Name") <text>NRIC/Passport No.</text>
                    @Html.RadioButton("option", "Gender") <text>Customer Name</text>
                </td>
                <td>
                    @Html.TextBox("search")<input type="submit" name="submit" value="Search" />
                </td>
            </tr>
        </table>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentID)
            </th>
